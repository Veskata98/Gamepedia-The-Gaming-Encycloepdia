<section class='discussion-create-section'>
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />
    {{#if errorMessages}}
        <div class='error'>
            {{#each errorMessages}}
                <p>
                    {{this}}
                </p>
            {{/each}}
        </div>
    {{/if}}
    <div class='discussion-create-block'>
        <form action='/forum/discussions/create' method='post'>
            <h1>
                Create Discussion
            </h1>
            <input type='text' value='{{discussionTitle}}' placeholder='Title' name='title' />
            <textarea type='text' placeholder='Description' name='description' />{{discussionDescription}}</textarea>
            <button>
                Post
            </button>
        </form>
        <div class='create-discussion-redirect-container'>
            <a class='create-discussion-redirect-link' href='javascript:history.back()'>
                Back to Forum
            </a>
        </div>
    </div>
</section>