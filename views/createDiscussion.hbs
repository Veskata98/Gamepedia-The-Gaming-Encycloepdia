<section class='discussion-create-section'>
    {{#if errorMessages}}
        <div class='error'>
            {{#each errorMessages}}
                <p>
                    {{this}}
                </p>
            {{/each}}
        </div>
    {{/if}}
    <form action='/forum/discussions/create' method='post'>
        <input type='text' value='{{discussionTitle}}' placeholder='Title' name='title' />
        <input type='text' value='{{discussionDescription}}' placeholder='Description' name='description' />
        <button>
            Post
        </button>
    </form>
</section>