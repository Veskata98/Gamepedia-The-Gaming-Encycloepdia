<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='stylesheet' href='/static/styles/style.css' />
        <title>
            {{title}}
        </title>
    </head>
    <body>
        <header class='header'>
            <nav class='header-nav'>
                <a class='header-link' href='/'>
                    <div class='header-logo-container'>
                        <img class='header-brand-logo' src='/static/assets/Logo.png' alt='brand-img' />
                        <img class='header-brand-name' src='/static/assets/gemepedia-text-logo.png' alt='brand-name' />
                    </div>
                </a>

                <ul class='header-list' role='list'>
                    {{#if hasUser}}
                        <li class='header-item'>
                            <p class='header-item-username'>{{username}}</p>
                        </li>
                    {{/if}}
                    <li class='header-item'>
                        <a href='/'>
                            News
                        </a>
                    </li>
                    <li class='header-item'>
                        <a href='/games'>
                            Games
                        </a>
                    </li>
                    <li class='header-item'>
                        <a href='/platforms'>
                            Platforms
                        </a>
                    </li>

                    {{#if hasUser}}
                        <li class='header-item'>
                            <a href='/mygames'>
                                My Games
                            </a>
                        </li>
                        <li class='header-item'>
                            <form class='header-logout-form' action='/auth/logout' method='post'>
                                <button class='logout-btn'>Logout</button>
                            </form>
                        </li>
                    {{else}}
                        <li class='header-item'>
                            <a href='/auth/login'>
                                Login
                            </a>
                        </li>
                        <li class='header-item'>
                            <a href='/auth/register'>
                                Register
                            </a>
                        </li>
                    {{/if}}

                </ul>
            </nav>
        </header>
        <main>
            {{{body}}}
        </main>
        <footer class='footer'>
            <p class='footer-rights'>
                Veselin Yordanov &copy; 2022
            </p>
        </footer>
    </body>
</html>